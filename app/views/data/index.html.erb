<div class="container">
  <h3>Historical S&P 500 Stock Prices</h3>
  <table class="table-bordered table-condensed" align="left">
    <th align="center">Date</th><th align="center">S&P 500<br />Price</th>
          <th align="center">Shiller P/E<br />Ratio</th><th align="center">Monthly<br />Dividends</th>
    <% @all_data.each do |line| %>
      <tr>
        <td class="col-xs-" align="center"><%= line.date %></td>
        <td class="col-xs-" align="center"><%= number_to_currency(line.sp500_price) %></td>
        <td class="col-xs-" align="center"><%= number_with_precision(line.shiller_pe, :precision => 2) %></td>
        <td class="col-xs-" align="center"><%= number_to_currency(line.mo_divs) %></td>
      </tr>
    <% end %>
  </table>
</div>
